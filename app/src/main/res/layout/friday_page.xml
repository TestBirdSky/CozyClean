<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friday"
    android:background="#FF9933"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Device"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/contentCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background_top_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_device"
                        android:layout_width="104dp"
                        android:layout_height="104dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_satur_device" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Model"
                            android:textColor="#B5B5B5"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_phone_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Samsung SM-A145F"
                            android:textColor="#FF222222"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="System OS Version"
                            android:textColor="#B5B5B5"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_os_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Android 13"
                            android:textColor="#FF222222"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- State Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State Info"
                        android:textColor="#FF222222"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- RAM Info -->
                    <TextView
                        android:id="@+id/tv_ram_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="3.1 GB / 3.6 GB RAM used"
                        android:textColor="#FF222222"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_ram"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="86"
                        android:progressDrawable="@drawable/progress_bar_green" />

                    <!-- Storage Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_storage_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#222222"
                            android:textSize="12sp"
                            tools:text="Storage: 94.6 GB / 107.6 GB" />

                        <TextView
                            android:id="@+id/btn_clean"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_clean_txt"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:text="Clean"
                            android:textColor="#FFFF9933"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_storage"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="10dp"
                        android:max="100"
                        android:progress="88"
                        android:progressDrawable="@drawable/progress_bar_red" />

                </LinearLayout>

                <!-- Screen Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="#F6F6F6"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screen"
                        android:textColor="#FF222222"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E5EB" />

                    <!-- Screen Resolution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Screen Resolution"
                            android:textColor="#FF222222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_screen_resolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1080 ×2408"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Screen Density -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Screen Density"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_screen_density"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="450 DPI"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Screen Multiple-touch Support -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Screen Multiple-touch Support"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_multitouch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supported"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Battery Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#FFF6F6F6"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:textColor="#FF222222"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E5EB" />

                    <!-- Battery Capacity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Battery Capacity"
                            android:textColor="#FF222222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_battery_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5000 mAh"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Battery Level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Battery Level"
                            android:textColor="#FF222222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_battery_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Battery Health -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Battery Health"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_battery_health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Battery Temperature -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Battery Temperature"
                            android:textColor="#FF222222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_battery_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28°C"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Charging Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Charging Status"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_charging_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Charging"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Sensor Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#FFF6F6F6"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor"
                        android:textColor="#FF222222"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E5EB" />

                    <!-- Accelerometer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Accelerometer"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_accelerometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supported"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Gyroscope -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gyroscope"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_gyroscope"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supported"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Proximity Sensor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Proximity Sensor"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_proximity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supported"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Light Sensor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Light Sensor"
                            android:textColor="#FF222222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_light_sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supported"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- Loading Dialog -->
    <include
        android:id="@+id/loadingDialog"
        layout="@layout/dialog_load_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Permission Dialog -->
    <include
        android:id="@+id/permission_dialog"
        layout="@layout/dialog_permission_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>